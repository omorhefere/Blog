-  content_for :title, @article.title
= stylesheet_link_tag    "application", media: :all
= stylesheet_link_tag    "story", media: :all
= javascript_include_tag "application"


%div.container-fluid.buffered-top
  -# Section to show the header
  .container
    .page-header
      .jumbotron.jtron
        %h1.name1
          %b.title
          = @article.title
          -#show the time the article was created.
          %p.text.time=@article.date

      .col-xs-12.col-sm-6.col-md-8.move

        .caption
          %br
          %p.text1=@article.text

          = social_share_button_tag(@article.title)

          .container.post_comments_container.col-sm-12
            %p.text-muted
              =render 'comments'
